<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmm.noaki_takuya.internshipbaseapplication" >

    <!-- ここからアプリの設定 -->
    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >


        <!-- ChoiceHouseActivityの設定 -->
        <!-- Activityの数だけ設定が必要、この設定によってJavaのクラスがActivityであるかを判定している -->
        <activity android:name=".ChoiceHouseActivity" >
            <!-- AndroidはintentイベントによってActivityを起動する。その設定 -->
            <intent-filter>
                <!-- action.MAIN:アプリ起動時にこのActivity起動する設定 -->
                <!-- 他には電話の時に起動するactionなどがある -->
                <action android:name="android.intent.action.MAIN" />
                <!-- LAUNCHER:ホーム画面のアイコンから起動できるようにする設定 -->
                <!-- 他にはブラウザから起動してもOKなどのカテゴリがある -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ImHomeActivity"
            android:label="@string/app_name" >
        </activity>


        <activity
            android:name=".RecipeMenuActivity"
            android:label="@string/app_name" >
        </activity>


        <activity
            android:name=".RecipeActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.recipe" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.QUICK_VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.recipe" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ThankyouActivity"
            android:label="@string/app_name" >
        </activity>



        <!-- FileProvider:ファイルを扱う為のマネージャー -->
        <!-- このアプリだけが使えるディレクトリにあるファイルを他のアプリに一時的にアクセス許可を出してくれる -->
        <!-- 今回はメールアプリにレシピを送るときに使っている -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>