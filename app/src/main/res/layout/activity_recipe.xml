<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dmm.noaki_takuya.internshipbaseapplication.ChoiceHouseActivity">

    <!-- 壁紙 -->
    <com.dmm.noaki_takuya.internshipbaseapplication.View.BackgroundView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homeRecipe"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:alpha="0.7"
                android:text="さんちの"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                fontPath="fonts/HuiFont.ttf"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/eHomeRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/cookedview"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                app:srcCompat="@drawable/dish" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="材料名"
                android:textSize="14sp"
                android:textStyle="bold"
                fontPath="fonts/HuiFont.ttf"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/ingredient"
                android:layout_width="350dp"
                android:layout_height="77dp"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:text="材料名body"
                fontPath="fonts/HuiFont.ttf"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/eIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="材料名body" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手順"
                android:textStyle="bold"
                fontPath="fonts/HuiFont.ttf"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/process"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:alpha="0.7"
                android:text="手順body"
                fontPath="fonts/HuiFont.ttf"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/eProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="手順body" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/cooked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/text_area"
                    android:layout_centerInParent="true"
                    android:text="できたよ" />

                <ImageButton
                    android:id="@+id/edit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/back"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/share"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/edit"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/share" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
